<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_incomeDate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:text="Jun 28,2019"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_incomeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/tv_incomeDate"
            android:fontFamily="@font/latoregular"
            android:text="Job"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_incomeNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_incomeType"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/tv_incomeDate"
            android:fontFamily="@font/latoregular"
            android:text="Extra Income"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_incomeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:text="4800"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/colar"
            android:textSize="18sp"
            android:textStyle="normal" />

    </RelativeLayout>

</RelativeLayout>